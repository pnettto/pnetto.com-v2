---
layout: layouts/base.njk
title: Work
eleventyExcludeFromCollections: true
---
<h1>Work</h1>

<div class="tags-list" style="margin-bottom: 2rem;">
    {% for category in ['Development', 'Education', 'Entrepreneurship', 'Pet Projects'] %}
        <a href="#{{ category | slugify  }}" class="badge">{{ category }}</a>
    {% endfor %}
</div>

{% macro projectCard(project) %}
  <a href="{{ project.url }}" class="project-card">
    {% if project.data.coverImage %}
      <div class="project-card-image-wrapper">
        <img src="/images/projects/{{ project.data.slug }}/{{ project.data.coverImage }}" alt="{{ project.data.title }}" class="project-card-image">
      </div>
    {% endif %}
    <div class="project-card-content">
      <h3>{{ project.data.title }}</h3>
      
      {% if project.data.client or project.data.role %}
      <div class="project-card-meta">
        {% if project.data.client %}
          <span class="meta-item"><strong>Client:</strong> {{ project.data.client }}</span>
        {% endif %}
        {% if project.data.role %}
          <span class="meta-item"><strong>Role:</strong> {{ project.data.role }}</span>
        {% endif %}
      </div>
      {% endif %}

      {% if project.data.nanoDescription %}
      <p class="project-card-description">{{ project.data.nanoDescription }}</p>
      {% endif %}

      <span class="project-card-link">See more &rarr;</span>
    </div>
  </a>
{% endmacro %}

<div class="work-container">
  {% for category in ['Development', 'Education', 'Entrepreneurship', 'Pet Projects'] %}
  <section class="project-category">
    <a id="{{ category | slugify }}"></a>
    <h2>{{ category }}</h2>
    
    {# Featured Projects #}
    <div class="project-grid">
      {% for project in collections.work | sort(attribute='data.order') %}
        {% if category | slugify | lower in project.data.categories and project.data.featured %}
          {{ projectCard(project) }}
        {% endif %}
      {% endfor %}
    </div>

    {# Other Projects (See more) #}
    {% set otherProjects %}
      {% for project in collections.work | sort(attribute='data.order') %}
        {% if category | slugify | lower in project.data.categories and not project.data.featured %}
          {{ projectCard(project) }}
        {% endif %}
      {% endfor %}
    {% endset %}

    {% if otherProjects | trim %}
      <details class="see-more-container">
        <summary>See more</summary>
        <div class="project-grid">
          {{ otherProjects | safe }}
        </div>
      </details>
    {% endif %}

  </section>
  {% endfor %}
</div>
