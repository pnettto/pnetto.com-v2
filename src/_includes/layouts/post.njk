---
layout: layouts/base.njk
containerClass: narrow
---

<article>
    <p><a href="/logs/">‚Üê back</a></p>

    <header class="page-header">
        <h1>{{ title }}</h1>
    </header>
        
    <div class="post-meta">
        <time datetime="{{ date | postDate }}">{{ date | postDate }}</time>
    </div>

    <div class="post-content">
        {{ content | safe }}
    </div>

    <div class="tags-list" style="margin-bottom: 2rem;">
        {% for tag in tags %}
            {% if tag != "post" %}
            <a href="/category/{{ tag | slug }}/" class="badge">{{ tag }}</a>
            {% endif %}
        {% endfor %}
    </div>
</article>
