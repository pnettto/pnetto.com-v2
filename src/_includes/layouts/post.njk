---
layout: layouts/base.njk
---

<article>
    <header class="post-header">
        <h1>{{ title }}</h1>
        <div class="post-meta">
            <time datetime="{{ date | postDate }}">{{ date | postDate }}</time>
        </div>
    </header>

    <div class="post-content">
        {{ content | safe }}
    </div>
</article>
