---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
  addAllPagesToCollections: true
layout: layouts/base.njk
eleventyComputed:
  title: "Category: {{ tag }}"
permalink: /tags/{{ tag | slug }}/
---

<h1>Category: {{ tag }}</h1>

<ul class="post-list">
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
  <li class="post-item">
    <div class="post-main">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <div class="tags-list mini-tags">
            {% for tag in post.data.tags %}
                {% if tag != "post" %}
                <a href="/tags/{{ tag | slug }}/" class="badge">{{ tag }}</a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
    <span class="post-meta">{{ post.date | postDate }}</span>
  </li>
{% endfor %}
</ul>

<p><a href="/blog/">‚Üê Back to all posts</a></p>
