---
pagination:
  data: collections
  size: 1
  alias: tag
layout: layouts/base.njk
permalink: "logs/category/{{ tag }}/index.html"
---

<p><a href="/logs/">‚Üê back</a></p>

<header class="page-header">
  <h1>Category: {{ tag }}</h1>
</header>

<ul class="post-list">
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
  <li class="post-item">
    <div class="post-item-header">
        <div class="post-main">
            <a href="{{ post.url }}" class="post-title">{{ post.data.title }}</a>
        </div>
        <span class="post-meta">{{ post.date | postDate }}</span>
    </div>

    <div class="tags-list mini-tags">
        {% for tag in post.data.tags %}
            {% if tag != "post" %}
            <a href="/logs/category/{{ tag | slug }}/" class="badge">{{ tag }}</a>
            {% endif %}
        {% endfor %}
    </div>
  </li>
{% endfor %}
</ul>