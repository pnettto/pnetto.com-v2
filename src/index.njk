---
layout: layouts/base.njk
title: Welcome
---

<div class="welcome">
    <div class="random-photos" id="randomPhotos">
        {%
            set coverImages = [
                '2021-04-13-red-and-white-wooden-house-on-snow-covered-ground',
                '2025-03-17-colorful-paints-are-mixed-and-smeared-together',
                '_DSF1206',
                'DSCF8035-Enhanced-NR'
            ]
        %}
        {% for image in coverImages %}
            {% set cellImage = photos | matchPhotosource(image) %}
            <div class="cell{{ loop.index }}">
                <div class="random-photo">
                    {%
                        optmizedImageTag cellImage, { 
                            sizes: "(min-width: 1000px) " ~ (loop.index == 4 and "70vw" or "35vw") ~ ", 100vw", 
                            className: "fade-in" 
                        }
                    %}
                </div>
            </div>
        {% endfor %}

        <div class="cell5">
            <div class="intro fade-in" id="introBox">
                <div class="intro-inner">
                    <h1>Pedro Netto</h1>

                    <div class="intro-body">
                        <p>
                            I'm a
                            <a href="/work#development">web developer</a>
                            with a background in
                            <a href="/work#education">teaching</a>
                            and
                            <a href="/work#entrepreneurship"
                            >entrepreneurship</a>.
                        </p>
                        <p>
                            Learn more
                            <a href="/bio">
                                about me
                            </a>
                            and
                            <a href="/work">my work</a>.
                        </p>

                        <p>
                            Here are some pictures from my
                            <a href="/photos">photo archive</a>. Click them to
                            see more!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.PHOTO_LIST = [];
    fetch("/album-photos.json").then((e) => e.json()).then((e) =>
        window.PHOTO_LIST = window.PHOTO_LIST.concat(e)
    );
</script>
<script src="/assets/js/intro.js"></script>
