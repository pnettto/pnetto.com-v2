---
layout: layouts/base.njk
title: Welcome
---

<div class="welcome">
    <div class="random-photos" id="randomPhotos">
        {%
            set coverImages = [
            '_DSF4618',
            '_DSF6306',
            '2021-02-25-gray-and-white-rocky-mountain-tCpQRPKnfZY',
            '2023-09-12-PBOeAx34i9g' 
            ]
        %}
        {% for image in coverImages %}
            {% set cellImage = globalAllPhotos | matchPhotosource(image) %}
            <div class="cell{{ loop.index }}">
                <div class="random-photo">
                    {%
                        optmizedImageTag cellImage, { 
                            sizes: "(min-width: 1000px) " ~ (loop.index == 4 and "100vw" or "50vw") ~ ", 100vw", 
                            className: "fade-in" 
                        }
                    %}
                    <div class="fade-in">
                        <a
                            class="legend fade-in"
                            href="/photos/{{cellImage.album.slug}}"
                        >{{ cellImage.album.title }}</a>
                    </div>
                </div>
            </div>
        {% endfor %}

        <div class="cell5">
            <div class="intro fade-in" id="introBox">
                <div class="intro-inner">
                    <h1>Pedro Netto</h1>

                    <div class="intro-body">
                        <p>
                            I'm a
                            <a href="/work#development">web developer</a>
                            with a background in
                            <a href="/work#education">teaching</a>
                            and
                            <a href="/work#entrepreneurship"
                            >entrepreneurship</a>.
                        </p>
                        <p>
                            Learn more
                            <a href="/bio">
                                about me
                            </a>
                            and
                            <a href="/work">my work</a>.
                        </p>

                        <p class="mobile-hide">
                            Here are some pictures from my
                            <a href="/photos">photo archive</a>. Click them to
                            see more!
                        </p>

                        <p class="mobile-show">
                            And since you're here why not go check some of
                            <a href="/photos">my pictures</a>? :)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.PHOTO_LIST = [];
    fetch("/albumPhotos.json").then((e) => e.json()).then((e) =>
        window.PHOTO_LIST = window.PHOTO_LIST.concat(e)
    );
</script>
<script src="/assets/js/intro.js"></script>
