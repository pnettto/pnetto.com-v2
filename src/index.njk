<h2>Latest Posts</h2>

<ul class="post-list">
{% for post in collections.post | reverse %}
  {% if loop.index0 < 3 %}
  <li class="post-item">
    <div class="post-main">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <div class="tags-list mini-tags">
            {% for tag in post.data.tags %}
                {% if tag != "post" %}
                <a href="/tags/{{ tag | slug }}/" class="badge">{{ tag }}</a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
    <span class="post-meta">{{ post.date | postDate }}</span>
  </li>
  {% endif %}
{% endfor %}
</ul>
