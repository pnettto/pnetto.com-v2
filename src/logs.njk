---
layout: layouts/base.njk
title: Logs
---

<header class="page-header">
    <h1>All Posts</h1>
</header>

<div class="category-cloud">
    {% for tag in collections.all | getAllTags | filterTagList %}
        <a href="/tags/{{ tag | slug }}/" class="badge">{{ tag }}</a>
    {% endfor %}
</div>

<ul class="post-list">
{% for post in collections.post | reverse %}
  <li class="post-item">
    <div class="post-main">
        <a href="{{ post.url }}" class="post-title">{{ post.data.title }}</a>
        <div class="tags-list mini-tags">
            {% for tag in post.data.tags %}
                {% if tag != "post" %}
                <a href="/tags/{{ tag | slug }}/" class="badge">{{ tag }}</a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
    <span class="post-meta">{{ post.date | postDate }}</span>
  </li>
{% endfor %}
</ul>
